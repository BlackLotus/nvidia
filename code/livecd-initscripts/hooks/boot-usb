run_hook ()
{
    msg ":: Waiting for usb devices to settle..."
    /sbin/udevadm trigger --subsystem-match=usb
    /sbin/udevadm settle
    sleep 5
    msg ":: Scanning for boot usb device..."

    /bin/mkdir -p /bootmnt
    bootmnt="/bootmnt"
    found=0
    modprobe ext2
    for usb in /dev/sd[a-z][0-9]; do
        if  mount -r "${usb}" ${bootmnt} >/dev/null 2>&1; then
            if [ -e "${bootmnt}/archlive.sqfs" ]; then
                found=1
                msg "${usb}"
                break
            fi
        else
            echo "Failed to mount ${usb}"
        fi
        [ ${found} -eq 0 ] && umount ${bootmnt} >/dev/null 2>&1
    done

    if [ ${found} -eq 0 ]; then
        echo "ERROR: cannot find booted usb device, cannot continue..."
        exit 1
    else
        export BOOT_MOUNT="${bootmnt}"
    fi
    # check if there is a partition available for writing
    persistable=$(echo $usb|sed -e 's/1/2/')
    mkdir /test
    if mount -t ext2 $persistable /test
    then
        umount /test
        export $persistable
        rm -r /test
    fi
}

