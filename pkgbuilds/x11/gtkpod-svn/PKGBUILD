# Contributor: Jens Pranaitis <jens@jenux.homelinux.org>
# Contributor: niQo
pkgname=gtkpod-svn
pkgver=2185
pkgrel=1
pkgdesc="a platform independent GUI for Apple's iPod using GTK2"
arch=(i686 x86_64)
license=('GPL')
url="http://gtkpod.sourceforge.net"
depends=('libgpod>=0.5.2' libmp4v2 flac libid3tag libgnomecanvas libvorbis curl)
conflicts=('gtkpod')
provides=('gtkpod')
source=()
md5sums=()
_svntrunk=https://gtkpod.svn.sourceforge.net/svnroot/gtkpod/gtkpod/trunk
_svnmod=gtkpod
build() {
   cd "${srcdir}"
   svn co $_svntrunk/ $_svnmod --config-dir ./ -r $pkgver
   cp -r $_svnmod $_svnmod-build
   cd $_svnmod-build
   ./autogen.sh --prefix=/usr --without-gnome-vfs
   make PREFIX=/usr || return 1
   make PREFIX=/usr DESTDIR="${pkgdir}" install || return 1
   rm -rf "${srcdir}"/$_svnmod-build
}
