# Contributor: Jens Pranaitis <jens@jenux.homelinux.org>
# Contributor: niQo
pkgname=libgpod-svn
pkgver=2195
pkgrel=1
pkgdesc="libgpod is a shared library to access the contents of an iPod"
arch=(i686 x86_64)
license=('LGPL')
depends=('gtk2>=2.10.14' 'mutagen')
makedepends=('perlxml' 'swig' 'subversion')
url="http://www.gtkpod.org/libgpod.html"
options=(!libtool)
source=()
conflicts=('libgpod')
provides=('libgpod')
md5sums=()
_svntrunk=https://gtkpod.svn.sourceforge.net/svnroot/gtkpod/libgpod/trunk
_svnmod=libgpod
build() {
   cd "${srcdir}"
   svn co $_svntrunk/ $_svnmod --config-dir ./ -r $pkgver
   cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build
  ./autogen.sh 
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  rm -rf "${srcdir}"/$_svnmod-build
}
