# Contributor: Jens Pranaitis <jens@jenux.homelinux.org>
# Contributor: Jan de Groot <jgc@archlinux.org>
pkgname=evince
pkgver=2.24.2
pkgrel=2
pkgdesc="Simply a document viewer"
url="http://www.gnome.org"
arch=(i686 x86_64)
license=('GPL')
depends=('libspectre>=0.2.2' 'gsfonts' 'poppler-glib>=0.10.1' 'libdjvu>=3.5.20' 't1lib' 'libglade>=2.6.3' 'gnome-keyring>=2.24.1' 'shared-mime-info' 'desktop-file-utils')
makedepends=('gnome-doc-utils>=0.14.0' 'pkgconfig' 'intltool')
install=evince.install
options=('!libtool' '!emptydirs')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.24/${pkgname}-${pkgver}.tar.bz2)
md5sums=('f0f9e06a93516b238ee24ac38d68b57c')
replaces=('gpdf')
groups=('gnome-extra')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static \
	      --with-print=gtk --disable-nautilus \
	      --enable-pdf --enable-tiff \
	      --enable-djvu --disable-dvi \
	      --enable-t1lib --enable-pixbuf \
	      --enable-comics --enable-impress \
	      --disable-scrollkeeper --without-libgnome || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1
  
  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
