# Contributor: Pierre Schmitz <pierre@archlinux.de>

pkgname=phonon
pkgver=4.2.0
pkgrel=2
pkgdesc='The multimedia API for KDE 4'
arch=('i686' 'x86_64')
url='http://phonon.kde.org'
license=('LGPL')
depends=('qt>=4.4' 'alsa-lib')
makedepends=('pkgconfig' 'cmake' 'automoc4')
source=("ftp://ftp.kde.org/pub/kde/stable/phonon/${pkgver}/phonon-${pkgver}.tar.bz2")
md5sums=('de80b0f055886a6946acc7886713e23e')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWITH_GStreamer=OFF \
		-DWITH_GStreamerPlugins=OFF
	make
	make DESTDIR=$pkgdir install
}
