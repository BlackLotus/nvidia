# Contributor: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=wgetpaste
pkgver=2.12
pkgrel=1
pkgdesc="A script that automates pasting to a number of pastebin services."
url="http://wgetpaste.zlin.dk/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('wget' 'sed')
source=(http://wgetpaste.zlin.dk/$pkgname-$pkgver.bz2 \
        http://wgetpaste.zlin.dk/$pkgname.example)

md5sums=('281466653d91a62130835512a9d7882b'
         '77392c788659cc648a59df2d239ebe19')

build() {
  cd "${srcdir}"

  install -D -m755 "$pkgname-$pkgver" "${pkgdir}/usr/bin/$pkgname"
  install -D -m644 "$pkgname.example" "${pkgdir}/usr/share/$pkgname/$pkgname.example"
}
