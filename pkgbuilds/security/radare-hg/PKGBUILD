# Contributor: Jens Pranaitis <jens@jenux.homelinux.org>
# Contributor Shino <shino@jenux.homelinux.org>
pkgname="radare-hg"
pkgver=735
pkgrel=1
pkgdesc="A collection of tools with the aim to create a complete, portable, multi-architecture, unix-like toolchain for reverse engineering."
arch=('i686' 'x86_64')
url="http://radare.nopcode.org"
license=('GPL2')
depends=('bash' 'perl' 'python')
makedepends=('mercurial')
provides=("radare")
conflicts=("radare")
source=()
md5sums=()

_hgroot="http://radare.org/hg"
_hgrepo="radare"

build() {
	cd "${srcdir}/radare"

	msg "Configuring..."
	./configure --without-gui --without-vala INSTALL=/bin/install PREFIX=/usr || return 1

	msg "Building..."
	make -j1 || return 1

	msg "Installing..."
	make DESTDIR="${pkgdir}" install || return 1
}
