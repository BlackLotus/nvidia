# Contributor: Jens Pranaitis <jens@jenux.homelinux.org>
pkgname=qaircrack-ng
pkgver=0.1
pkgrel=1
pkgdesc="a very simple graphic frontend to Aircrack-ng"
arch=("i686")
url="http://sourceforge.net/projects/qaircrack-ng/"
license=('GPL')
depends=("qt" "libv2" "aircrack-ng")
makedepends=("cmake")
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('de6814f7ad9497aac187b68a7bf0a265')
build() {
  cd "${srcdir}"/qAircrack-ng-$pkgver
  qmake -o Makefile qaircrack-ng.pro
  make || return 1
  mkdir -p "${pkgdir}"/usr/sbin
  install -m755 qaircrack-ng "${pkgdir}"/usr/sbin/
}
# vim:set ts=2 sw=2 et:
