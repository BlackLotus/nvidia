# Contributor: Ermak <ermak@email.it>
pkgname=airoscript
pkgver=2.1.0
pkgrel=5
pkgdesc="Shell script designed to ease the use of aircrack-ng"
arch=('i686' 'x86_64')
url="http://code.google.com/p/airoscript/"
license=('GPL2')
depends=('bash' 'macchanger' 'iproute2')
makedepends=('gettext')
optdepends=('wlandecrypter' 'dhclient' 'mdk3')
backup=(etc/airoscript.conf)
install=$pkgname.install
source=(http://airoscript.googlecode.com/files/$pkgname-$pkgver.tar.gz $pkgname.install)
md5sums=('7c8d46d2792260816ec65e64fca31ce5' '9c9f0b83dd34db1a3739b67a24e903ee')

build() {
  cd "$srcdir/$pkgname"

  #change the default path
  sed -i 's|/usr/local|/usr|g' Makefile
  sed -i 's|/usr/local|/usr|g' src/airoscript.conf

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
