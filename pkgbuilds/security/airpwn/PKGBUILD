# Contributor: Jens Pranaitis <jens@jenux.homelinux.org>
# Contributor: nofxx <x@nofxx.com>
pkgname=airpwn
pkgver=1.3
pkgrel=3
pkgdesc="Airpwn is a tool for generic packet injection on an 802.11 network."
arch=('i686' 'x86_64')
url="http://airpwn.sourceforge.net"
license=('GPL')
depends=('pcre' 'libpcap' 'openssl' 'lorcon' 'wireless_tools')
source=(http://downloads.sourceforge.net/airpwn/$pkgname-$pkgver.tgz 'airpwn_c.diff')
md5sums=('15b6f1cd287b4bb20dd586bb6c83628d'
         '4abb5aacf3750f97083875b67dd9b722')
build() {
        cd "${srcdir}"/$pkgname-$pkgver
	patch -Np0 -i "${srcdir}"/airpwn_c.diff || return 1
	./configure --prefix=/usr --mandir=/usr/share/man
	make || return 1
	make DESTDIR="${pkgdir}" install || return 1
}
