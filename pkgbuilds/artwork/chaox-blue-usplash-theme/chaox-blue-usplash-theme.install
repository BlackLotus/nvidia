post_install() {
    echo ">>> The theme has been installed in /usr/lib/usplash/chaox-blue-theme.so"
    echo ">>> To use it do a 'ln -sf /usr/lib/usplash/chaox-blue-theme.so /lib/usplash-artwork.so'"
}

post_upgrade() {
    post_install
    /bin/true
}

pre_remove() {
    /bin/true
}

post_remove() {
    /bin/true
}

op=$1
shift
$op $*

